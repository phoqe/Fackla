<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="24dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <com.phoqe.material_foundation.EmptyState
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:image="@drawable/ic_undraw_my_location"
        app:image_cd="@string/onboarding_mock_location_content_desc"
        app:title="@string/onboarding_mock_location_title"
        app:body="@string/onboarding_mock_location_body" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_mock_loc_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_mock_location_button" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:text="@string/onboarding_mock_location_caption" />
    </LinearLayout>
</LinearLayout>