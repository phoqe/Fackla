<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="24dp"
    android:orientation="vertical">

    <com.phoqe.fackla.components.EmptyState
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:illustration="@drawable/ic_undraw_my_location"
        app:title="@string/onboarding_mock_location_title"
        app:body="@string/onboarding_mock_location_body"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_select_mock_loc_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_mock_location_button"
    />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:text="@string/onboarding_mock_location_caption" />

</LinearLayout>