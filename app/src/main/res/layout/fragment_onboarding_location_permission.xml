<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="24dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical">

    <com.phoqe.fackla.ui.component.EmptyState
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:illustration="@drawable/ic_undraw_my_current_location"
        app:title="@string/onboarding_location_permission_title"
        app:body="@string/onboarding_location_permission_body" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_review_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_location_permission_button" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:text="@string/onboarding_location_permission_caption" />
    </LinearLayout>
</LinearLayout>